{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"types": [],
		"baseUrl": ".",
		"paths": {
			"@": ["./packages"],
			"@views": ["./views"],
			"@assets": ["./assets"],
			"@components": ["./components"],
			"@hooks": ["./hooks"]
		}
	},
	"include": ["./typings/**/*.ts", "./**/*.ts", "./**/*.tsx", "./**/*.vue", "../dist/**/*.mjs"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
