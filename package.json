	"scripts": {
		"clean": "rimraf ./design/dist && rimraf ./design/docs",
		"clean:dist": "rimraf ./design/dist",
		"clean:docs": "rimraf ./design/docs",
		"dev": "pnpm run --filter ./design dev",
		"build": "npm run clean:dist && pnpm run --filter ./design build",
		"dev:docs": "pnpm run --filter ./design dev:docs",
		"build:docs": "npm run clean:docs && pnpm run --filter ./design build:docs",
		"lint": "pnpm run --filter ./design/packages lint"
	}
}
