{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"types": [
			"unplugin-vue-define-options/macros-global"
		],
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"packages/*"
			],
			"@components/*": [
				"packages/components/*"
			],
			"@utils/*": [
				"packages/utils/*"
			],
			"@theme/*": [
				"packages/theme/*"
			],
			"@public/*": [
				"public/*"
			]
		}
	},
	"include": [
		"examples/**/*.ts",
		"examples/**/*.d.ts",
		"examples/**/*.tsx",
		"examples/**/*.vue",
		"packages/**/*.ts",
		"packages/**/*.tsx",
		"packages/**/*.vue",
		"typings/**/*.ts",
		"typings/**/*.tsx"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
